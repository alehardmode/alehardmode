---
export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Alejandro - Experienced Full Stack Developer specializing in modern web technologies.',
} = Astro.props;

// Get the base path from Astro config
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta
      name="keywords"
      content="Full Stack Developer, Web Developer, JavaScript, React, Node.js, HTML, CSS, Portfolio, Alejandro, alehardmode"
    />
    <meta name="author" content="Alejandro" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="revisit-after" content="7 days" />
    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://alehardmode.github.io/alehardmode/" />
    <meta property="og:site_name" content="Alejandro Portfolio" />
    <meta property="og:image" content="https://alehardmode.github.io/alehardmode/og-image.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Alejandro - Full Stack Developer Portfolio" />
    <meta property="og:locale" content="en_US" />

    <!-- Additional Open Graph tags for better WhatsApp support -->
    <meta
      property="og:image:secure_url"
      content="https://alehardmode.github.io/alehardmode/og-image.png"
    />
    <meta name="thumbnail" content="https://alehardmode.github.io/alehardmode/og-image.png" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://alehardmode.github.io/alehardmode/og-image.png" />
    <meta name="twitter:image:alt" content="Alejandro - Full Stack Developer Portfolio" />
    <meta name="twitter:creator" content="@alehardmode" />
    <meta name="twitter:site" content="@alehardmode" />

    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#000000" />
    <meta name="msapplication-TileColor" content="#000000" />
    <meta name="application-name" content="Alejandro Portfolio" />
    <meta name="apple-mobile-web-app-title" content="Alejandro Portfolio" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <link rel="icon" type="image/svg+xml" href={base + '/favicon.svg'} />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* Reset and Base Styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family:
      'Inter',
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      'Roboto',
      'Oxygen',
      'Ubuntu',
      'Cantarell',
      sans-serif;
    line-height: 1.6;
    color: #333;
    background-color: #ffffff;
  }

  html {
    scroll-behavior: smooth;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
</style>
